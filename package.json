{
  "name": "mirai-dub-ai",
  "version": "1.0.0",
  "private": true,
  "description": "AI-powered video translation and dubbing platform",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "mobile": "pnpm --filter mobile",
    "mobile:start": "pnpm --filter mobile start",
    "mobile:ios": "pnpm --filter mobile ios",
    "mobile:android": "pnpm --filter mobile android",
    "mobile:web": "pnpm --filter mobile web",
    "clean": "rm -rf node_modules apps/*/node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
